<%= form_for :message, url: messages_path do |f| %>
 
  <p>
    <%= f.label :app_id %><br>
    <%= f.text_area :app_id %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.label :username %><br>
    <%= f.text_area :username %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>